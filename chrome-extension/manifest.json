{
  "manifest_version": 3,
  "name": "Verb Interactive Job Tracker",
  "version": "1.0",
  "description": "A simple Chrome extension tracks Verb job postings.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"]
}
